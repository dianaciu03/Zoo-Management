@page
@using BusinessLogic.Tickets;
@model WebApp.Pages.ConfirmedOrderModel
@{
    <style>
        .payment-container {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            height: 100px;
        }

        .payment-method label {
            display: flex;
            align-items: center;
            margin-right: 10px;
            font-size: 20px;
        }

            .payment-method label img {
                height: 80px;
                margin-right: 5px;
            }

        .payment-method input[type="radio"] {
            margin-right: 5px;
            font-size: 20px;
        }
    </style>
    <div>

            <h1 class="page-title" style="margin-bottom:50px;">Order Overview</h1>

            @foreach (Ticket ticket in Model.Tickets)
            {
                <div class="ticket-container">
                <p class="ticket-type">Ticket Type: @ticket.TicketType</p>
                    <div class="ticket-info">
                    <p class="ticket-price">€@ticket.Price</p>
                    <img src="data:image/bmp;base64,@Model.CreateBarcode(ticket.Barcode.ToString())" />
                    </div>

                </div>
            }

           
    </div>
}
