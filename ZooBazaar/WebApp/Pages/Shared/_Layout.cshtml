<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Home"] - ZooBazar</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndividualProjectFestivalWebsite.styles.css" asp-append-version="true" />
</head>

<body>
    <div>
        <div>
            <nav class="navbar">
                <div style="margin-left:3rem" class="logo">
                    <a asp-page="/Index">
                        <img src="~/images/BangerLogo.png"  alt="Your Logo">
                    </a>
                </div>
                    <ul class="nav-links">
                        <li style="padding-right: 4rem"><a asp-page="#">About Us</a></li>
                        <li ><a asp-page="TicketBooth">Tickets</a></li>
                        <li style="padding-left: 4rem"><a asp-page="#">Gallery</a></li>
                    </ul>
                <div style="margin-right:3rem" class="login">
                    <a asp-page="Login">Login</a>
                </div>
            </nav>
        </div>

        <div class="main">
            <main>
                @RenderBody()
            </main>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>